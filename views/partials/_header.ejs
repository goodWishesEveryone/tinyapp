<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <% if (locals.username) { %>
        <div style="display: flex">
          <div class="nav-item" style="flex: 1; width: 300px">
            <a style="color: #ffffff" href="/urls">My URLs  </a>
            <a style="color: #ffffff" href="/urls/new">Create New URL</a>
          </div>
          <div
            class="nav-item"
            style="flex: 1; width: 300px; text-align: right"
          >
            Logged In As <%= username.email %>
            <form style="display: inline" method="POST" action="/logout">
              <input type="submit" value="Logout" />
            </form>
          </div>
        </div>
        <% } else { %>
        <div class="nav-item" align="right">
          <% if (!locals.loginURL){%>
            <p style="color :rgb(121, 184, 163);"> For registered user, please login; otherwise, please create an account.</p>
            <a style="color: #ffffff" href="/login" align="right">Login</a>
            <% } %> 
          <% if (!locals.registerURL){%>
            <a style="color: #ffffff" href="/register" align="right">Register</a>
            <% } %>
        </div>
        <% } %>
      </div>
    </div>
  </nav>
</header>
